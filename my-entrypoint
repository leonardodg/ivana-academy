#!/usr/bin/env bash

# Start Apache
echo "Apache is running"
apachectl -D FOREGROUND

# Start Moodle Docker PHP Entrypoint
echo "Moodle Docker PHP Entrypoint"
moodle-docker-php-entrypoint

# Start CRON
echo "RUN CRON Jobs"
env >> /etc/environment
echo "*/5 * * * * /usr/local/bin/php /var/www/html/admin/cli/cron.php >> /var/log/moodle-cron.log 2&>1" >> /etc/crontab
echo "0 0 1 * * truncate -s 0 /var/log/moodle-cron.log" >> /etc/crontab
service cron restart
